{
  "name": "koala-server",
  "version": "1.0.0",
  "description": "Koa basic Server to expose a REST API with security as throttling and performant.",
  "main": "server.js",
  "author": "Martin Granados",
  "license": "MIT",
  "scripts": {
    "lint": "pretty-quick && eslint --ignore-path .gitignore .",
    "dev": "nodemon server.js --exec 'yarn run lint && node'"
  },
  "husky": {
    "installType": "overwrite",
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint"
    }
  },
  "dependencies": {
    "dotenv": "^6.1.0",
    "koa": "^2.6.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-logger": "^3.2.0",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.3.7"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.2",
    "nodemon": "^1.18.5",
    "prettier": "1.14.3",
    "pretty-quick": "^1.8.0"
  }
}
